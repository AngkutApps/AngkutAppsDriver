<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.profil.ProfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/bg_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profil"
            android:textColor="@color/textColorWhite"
            android:textSize="25sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/img_profil"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_nama_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Amelia Ramadanti"
                android:textColor="@color/textBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0 Points"
                android:layout_marginBottom="20dp"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_hadiah"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun1"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/gift" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun1"
                        android:text="Hadiah"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                android:id="@+id/cv_pusatBantuan"
                app:cardCornerRadius="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun2"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/help" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun2"
                        android:text="Pusat Bantuan"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/cv_kontakDarurat"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun3"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/contact" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun3"
                        android:text="Kontak Darurat"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/cv_pengaturan"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun4"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/settings" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun4"
                        android:text="Pengaturan"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                android:id="@+id/cv_bagikanFeedback"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun5"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun5"
                        android:text="Bagikan Feedback"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                android:id="@+id/cv_beriMasukan"
                app:cardCornerRadius="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun6"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/suggestion" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun6"
                        android:text="Beri Masukan"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/cv_FAQ"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun7"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/question" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun7"
                        android:text="FAQ"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/cv_logOut"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorFormBackground"
                style="@style/card_view_akun">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/textColorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/iconAkun8"
                        android:layout_width="40dp"
                        android:layout_height="40sp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconAkun8"
                        android:text="Log Out"
                        android:textColor="@color/textBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>