<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.history.VoucherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4DBDB8B8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnPenggunaanVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_voucher"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:textSize="14sp"
                    android:paddingRight="16dp"
                    android:paddingBottom="6dp"
                    android:text="Penggunaan"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/btnPembelianVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:textSize="14sp"
                    android:paddingRight="16dp"
                    android:paddingBottom="6dp"
                    android:text="Pembelian"
                    android:textColor="#8F8A8A" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_voucher"
            tools:listitem="@layout/frame_hitsory"
            />

    </LinearLayout>

</FrameLayout>